          <Tab text="Rosters">
               <content>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Text layoutX="14.0" layoutY="27.0" strokeType="OUTSIDE" strokeWidth="0.0" text="About the Rosters" wrappingWidth="172.80336952209473">
                           <font>
                              <Font name="System Bold" size="18.0" />
