<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="420.0" xmlns="http://javafx.com/javafx/8.0.161" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dutyroster.StatusController">
   <children>
      <TableView fx:id="tableView" maxWidth="400.0" minWidth="400.0" prefHeight="406.0" prefWidth="400.0" styleClass="table">
         <columns>
            <TableColumn fx:id="colCode" maxWidth="100.0" minWidth="66.0" prefWidth="66.0" resizable="false" sortable="true" text="Code">
               <cellValueFactory>
                  <PropertyValueFactory property="code" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="colTitle" maxWidth="298.0" minWidth="-Infinity" prefWidth="280.0" resizable="false" sortable="true" text="Title">
               <cellValueFactory>
                  <PropertyValueFactory property="title" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="colIncrements" maxWidth="53" minWidth="53" prefWidth="53" resizable="false" sortable="true" text="Inc">
                <cellValueFactory>
                    <PropertyValueFactory property="increments" />
                </cellValueFactory>
                <cellFactory>
                  <partarch.fx.CheckBoxCellFactory />
                </cellFactory>
            </TableColumn>
         </columns>
      </TableView>
      <HBox alignment="CENTER" maxHeight="50.0" maxWidth="400.0" minWidth="50.0" prefHeight="50.0" prefWidth="400.0" spacing="10">
         <children>
            <TextField fx:id="codeField" prefHeight="31.0" prefWidth="60.0" promptText="Code" />
            <TextField fx:id="titleField" prefHeight="31.0" prefWidth="154.0" promptText="Title" />
            <CheckBox fx:id="chkIncrements" mnemonicParsing="false" selected="true" text="Allow Increment" />
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" spacing="5.0">
         <children>
            <Button fx:id="addButton" contentDisplay="TOP" onAction="#addStatus" text="Add" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
