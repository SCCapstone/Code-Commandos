<GridPane alignment="CENTER" hgap="5.0" prefHeight="483.0" prefWidth="394.0" vgap="5.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dutyroster.RankController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
   </padding>
   <columnConstraints>
      <ColumnConstraints maxWidth="113.0" minWidth="0.0" prefWidth="113.0" />
      <ColumnConstraints maxWidth="329.0" minWidth="216.0" prefWidth="216.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints maxHeight="0.0" minHeight="0.0" prefHeight="0.0" />
      <RowConstraints maxHeight="724.0" minHeight="143.0" prefHeight="409.0" />
      <RowConstraints maxHeight="617.0" minHeight="36.0" prefHeight="44.0" />
   </rowConstraints>
   <children>
      <TableView fx:id="tableView" styleClass="table" prefHeight="409.0" prefWidth="215.0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1">
         <columns>
            <TableColumn fx:id="sort" minWidth="-Infinity" prefWidth="142.0" resizable="false" sortable="true" text="Sort Order" visible="false">
               <cellValueFactory>
                  <PropertyValueFactory property="sort" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="rank" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="255.0" resizable="false" sortable="false" text="Rank">
               <cellValueFactory>
                  <PropertyValueFactory property="rank" />
               </cellValueFactory>
            </TableColumn>
         </columns>
        <sortOrder>
          <fx:reference source="sort" />
        </sortOrder> 
      </TableView>
      <HBox alignment="bottom_right" prefHeight="309.0" prefWidth="334.0" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2">
         <children>
            <TextField fx:id="rankField" prefHeight="31.0" prefWidth="145.0" promptText="Rank" />
            <Button onAction="#addRank" text="Add" />
         </children>
      </HBox>
      <VBox alignment="CENTER" prefHeight="240.0" prefWidth="113.0" GridPane.rowIndex="1">
         <children>
            <Button fx:id="moveUp" layoutX="26.0" layoutY="199.0" mnemonicParsing="false" onAction="#moveSortUp" prefHeight="80.0" prefWidth="102.0" text="Move Up" wrapText="true" />
            <Button fx:id="moveDown" mnemonicParsing="false" onAction="#moveSortDown" prefHeight="80.0" prefWidth="102.0" text="Move Down" wrapText="true" />
         </children>
      </VBox>
   </children>
</GridPane>
